{
  "name": "casgo-monorepo",
  "version": "1.0.0",
  "description": "Root of the Casgo monorepo, containing frontend, backend, and ML services",
  "private": true,
  "scripts": {
    "postinstall": "npm run install-all",
    "install-all": "npm-run-all --parallel install:*",
    "install:frontend": "cd casgo && npm install --legacy-peer-deps",
    "install:backend": "cd casgo/backend && npm install",
    "dev": "concurrently \"npm:dev:frontend\" \"npm:dev:backend\" \"npm:dev:ml\"",
    "dev:frontend": "cd casgo && npm run dev",
    "dev:backend": "cd casgo/backend && npm run dev",
    "dev:ml": "cd casgo/ml-service && python main.py",
    "build-all": "npm-run-all --parallel build:*",
    "build:frontend": "cd casgo && npm run build",
    "build:backend": "cd casgo/backend && npm run build",
    "test-all": "npm-run-all --parallel test:*",
    "test:frontend": "cd casgo && npm test",
    "test:backend": "cd casgo/backend && npm test",
    "test:ml": "cd casgo/ml-service && pytest",
    "lint-all": "npm-run-all --parallel lint:*",
    "lint:frontend": "cd casgo && npm run lint",
    "lint:backend": "cd casgo/backend && npm run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md,yml}\" --ignore-path ./.prettierignore"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HackletonOnFire/VIBESTACK.git"
  },
  "keywords": [
    "monorepo",
    "sustainability",
    "ai"
  ],
  "author": "VibeStack",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/HackletonOnFire/VIBESTACK/issues"
  },
  "homepage": "https://github.com/HackletonOnFire/VIBESTACK#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-plugin-prettier": "^5.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.0"
  }
}
